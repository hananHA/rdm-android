<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/td_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ar_font"
            android:text="معلومات التذكرة"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/td_title">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/td_photo3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/td_photo2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/td_photo1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/td_photo0"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />


            </LinearLayout>

            <Spinner
                android:id="@+id/td_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="335dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="الصور"
                android:fontFamily="@font/ar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="الوصف"
                android:fontFamily="@font/ar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/td_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_bg"
                android:inputType="textMultiLine"
                android:textColorHint="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="الحي"
                android:fontFamily="@font/ar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/deleteTicket"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/rounded_red"
            android:fontFamily="@font/ar_font"
            android:stateListAnimator="@null"
            android:text="حذف التذكرة"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="655dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/evalTicket"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/rounded_green"
            android:fontFamily="@font/ar_font"
            android:stateListAnimator="@null"
            android:text="تقييم التذكرة"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="655dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/showEval"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/rounded_yellow"
            android:fontFamily="@font/ar_font"
            android:stateListAnimator="@null"
            android:text="عرض التقييم"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="655dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</ScrollView>