<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confirm_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حدث خطأ ما!"
            android:fontFamily="@font/ar_font"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/err_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="الرجاء المحاولة مرة أخرى"
            android:fontFamily="@font/ar_font"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/confirm_err"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_error"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>