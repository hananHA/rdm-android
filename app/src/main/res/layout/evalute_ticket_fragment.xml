<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eval_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ar_font"
            android:text="تقييم التذكرة"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eval_title">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fix_photo3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/fix_photo2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/fix_photo1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/fix_photo0"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/upload_image"
                    android:padding="20dp"
                    android:src="@drawable/ic_plus" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="صور الإصلاح"
                android:fontFamily="@font/ar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:numStars="5"
                android:stepSize="1.0"
                android:theme="@style/RatingBar"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/td_comment"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:hint="اكتب ملاحظاتك هنا"
                android:textColor="@color/gray"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:background="@drawable/edittext_bg"
                android:inputType="textMultiLine"
                android:textColorHint="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>




        <Button
            android:id="@+id/evlTicket"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/rounded_green"
            android:fontFamily="@font/ar_font"
            android:stateListAnimator="@null"
            android:text="اعتماد التقييم"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="655dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/backTicket"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/rounded_green"
            android:fontFamily="@font/ar_font"
            android:stateListAnimator="@null"
            android:text="العودة للتذكرة"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="655dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</ScrollView>